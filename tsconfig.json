{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "lib": ["es2022"],
    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "node16",

    // TODO
    // "strict": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["index.js", "bin", "commands", "lib", "scripts", "tests"],
  "exclude": ["dist/**/*"]
}
